{
  "name": "media-hero-catch",
  "version": "1.0.0",
  "description": "Firefox extension to automatically detect and download hero media (images/videos) from webpages, including Instagram carousels",
  "main": "src/background/background.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\" \"*.json\" \"*.md\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\" \"*.json\" \"*.md\"",
    "build": "web-ext build --source-dir=. --artifacts-dir=dist --overwrite-dest",
    "start:firefox": "web-ext run --source-dir=. --firefox-profile=dev-profile",
    "validate": "npm run lint && npm run format:check && npm test"
  },
  "keywords": [
    "firefox",
    "extension",
    "webextension",
    "media",
    "downloader",
    "instagram",
    "hero-image",
    "carousel",
    "batch-download"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/YOUR_USERNAME/media-hero-catch.git"
  },
  "bugs": {
    "url": "https://github.com/YOUR_USERNAME/media-hero-catch/issues"
  },
  "homepage": "https://github.com/YOUR_USERNAME/media-hero-catch#readme",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.50.0",
    "eslint-plugin-jest": "^27.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "puppeteer": "^21.3.0",
    "web-ext": "^7.8.0"
  },
  "dependencies": {},
  "jest": {
    "testEnvironment": "jsdom",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "firefox": "115"
          }
        }
      ]
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}